# --- Environment Selection ---
# Optional: Set to 'dev', 'uat', or 'prod' to override settings.ini for local runs
# PIPELINE_ENV=dev

# --- Encryption Key ---
# Used for encrypting sensitive data columns
SECRET_ENCRYPTION_KEY="your-secret-encryption-key-32-chars"

# --- AWS Credentials ---
# Used for S3 access
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_DEFAULT_REGION=us-east-1

# --- S3 Configuration ---
S3_BUCKET_NAME=your-data-pipeline-bucket
S3_RAW_LAYER=raw/
S3_CURATED_LAYER=curated/

# --- Snowflake Credentials ---
SNOWFLAKE_USER=your_snowflake_user
SNOWFLAKE_PASSWORD=your_snowflake_password
SNOWFLAKE_ACCOUNT=your_snowflake_account  # e.g., xy12345.us-east-1
SNOWFLAKE_WAREHOUSE=your_warehouse
SNOWFLAKE_DATABASE=your_database
SNOWFLAKE_SCHEMA=your_schema
SNOWFLAKE_ROLE=your_role

# --- PostgreSQL Credentials (Optional - for Airflow metadata) ---
POSTGRES_USER=airflow
POSTGRES_PASSWORD=airflow
POSTGRES_DB=airflow
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# --- Slack Notifications (Optional) ---
SLACK_WEBHOOK_URL=your_slack_webhook_url

# --- Local Development Settings ---
PIPELINE_RUN_LOCAL=true
PIPELINE_LOG_LEVEL=INFO
